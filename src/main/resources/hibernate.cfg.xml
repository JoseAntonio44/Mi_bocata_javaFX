<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración de la base de datos -->
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/bocata</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Configuración adicional -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Mapeo de entidades -->
        <mapping class="org.example.mi_bocadillo_javafx.model.Alergeno"/>
        <mapping class="org.example.mi_bocadillo_javafx.model.Alumno"/>
        <mapping class="org.example.mi_bocadillo_javafx.model.AlumnoDescuento"/>
        <mapping class="org.example.mi_bocadillo_javafx.model.Bocadillo"/>
        <mapping class="org.example.mi_bocadillo_javafx.model.Curso"/>
        <mapping class="org.example.mi_bocadillo_javafx.model.Descuento"/>
        <mapping class="org.example.mi_bocadillo_javafx.model.Pedido"/>
        <mapping class="org.example.mi_bocadillo_javafx.model.Usuario"/>



    </session-factory>
</hibernate-configuration>